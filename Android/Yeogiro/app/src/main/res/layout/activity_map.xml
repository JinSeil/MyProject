<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/frMapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.MapFragment"/>
    <LinearLayout
        android:id="@+id/llDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aa000000"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvDialogBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="body"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/tvDialogCancel"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@android:color/holo_orange_light"
                android:text="아니오"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvDialogOk"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@android:color/holo_orange_light"
                android:text="예"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rvFriend"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tvChat"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="#88000000"
            android:padding="10dp"
            android:text="^\nChat"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:singleLine="false"
            android:onClick="onClick"/>
        <TextView
            android:id="@+id/tvCall"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="#88000000"
            android:padding="10dp"
            android:text="Friend\nCall"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:singleLine="false"
            android:onClick="onClick"
            android:visibility="gone"/>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFriend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#CC000000"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tvDebug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#88000000"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llDis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#88000000"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나와 목적지"
                android:textColor="@android:color/white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvMTDis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약 100m"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나와 친구"
                android:textColor="@android:color/white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvMFDis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약 100m"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="친구와 목적지"
                android:textColor="@android:color/white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvFTDis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약 100m"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rvFriend"
        android:orientation="vertical"
        android:background="#88000000"
        android:gravity="right"
        android:visibility="gone">
        />
        <TextView
            android:id="@+id/tvCloseChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:padding="20dp"
            android:textColor="@android:color/white"
            android:onClick="onClick"
            android:textSize="20sp"/>
        <ScrollView
            android:id="@+id/scChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:padding="5dp">
            <LinearLayout
                android:id="@+id/llChatContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <EditText
                android:id="@+id/etChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@android:color/white"
                android:maxLines="2"/>
            <Button
                android:id="@+id/btChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전송"
                android:onClick="onClick"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
